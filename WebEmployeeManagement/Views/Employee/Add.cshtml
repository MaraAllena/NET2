@model EmployeeModel
@{
    ViewData["Title"] = "Add Employee";
}

<h2>Add Employee</h2>

@Html.ValidationSummary()


<form class="form-horizontal" asp-controller="Employee" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Surname">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Year">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Position" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Position">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Division" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Division">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
<a class="btn btn-primary" role="button" asp-controller="Employee" asp-action="Index" asp-route-id="">Back</a>