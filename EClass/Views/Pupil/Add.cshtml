@model PupilModel
@{
    ViewData["Title"] = "Add new pupil";
}

<h2>Add new pupil</h2>

@Html.ValidationSummary()


<form class="form-horizontal" asp-controller="Pupil" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Surname">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Birthyear" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Birthyear">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ClassNumber" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ClassNumber">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

<a class="btn btn-primary" role="button" asp-controller="Pupil" asp-action="Index" asp-route-id="">Back</a>