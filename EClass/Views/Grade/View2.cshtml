@model List<GradeModel>
@{
    ViewData["Title"] = "Subjects";
}

<h2>Grades in subject</h2>
@if (Model.Count == 0)
{

    <p>Subject has no grades added!</p>

}
else
{

    <div>
        Subject: @Model[0].SubjectTitle
    </div>


    <div>
        <table class="table table-striped">

            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Grade</th>
            </tr>
            @foreach (var grades in Model)
            {
                <tr>
                    <td>@grades.PupilsName</td>
                    <td>@grades.PupilsSurname</td>
                    <td>@grades.Grade</td>
                </tr>
            }
        </table>
    </div>
}
    <a class="btn btn-primary" role="button" asp-controller="Subject" asp-action="Index" asp-route-id="">Back</a>
