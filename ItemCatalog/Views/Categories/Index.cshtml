@model List<CategoriesModel>

@{
    ViewData["Title"] = "Categories";
}

<h2>All categories</h2>

<table class="table table-striped">
    <tr>
        
        <th>Id</th>
        <th>Name</th>
        <th></th>

    </tr>

    @foreach(var category in Model)
        {
        <tr>         
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td><a asp-controller="Items" asp-actions="Index" asp-route-id="@category.Id">View Items</a></td>
        </tr>  
        }

</table>

