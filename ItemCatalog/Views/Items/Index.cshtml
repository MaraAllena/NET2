@model List<ItemsModel>
@{
    ViewData["Title"] = "Items";
}

<h2>All Items</h2>
<br />
<a asp-controller="Categories" asp-action="Index">Back</a>
<br />
@if (Model.Count > 0)
{
    <table class="table table-striped">

        <tr>
            <th>Item</th>
            <th>Description</th>
            <th>Price (euro)</th>
            <th></th>
        </tr>
        @foreach (var items in Model)
        {
            <tr>
                <td>@items.Name</td>
                <td>@items.Description</td>
                <td>@items.Price</td>
                <td><a asp-controller="Items" asp-action="View" asp-route-id="@items.Id">View</a></td>
            </tr>
        }
    </table>
}
else
{
    <div> No Items in this Category!</div>
}


